@if (!string.IsNullOrEmpty(Message))
{
    <div class="error-container">
        <MudIcon Icon="@Icons.Material.Filled.Error" Color="Color.Error" Size="Size.Large" />
        <MudText Typo="Typo.h5" Color="Color.Error" Class="mt-4">@Title</MudText>
        <MudText Class="mt-2">@Message</MudText>
        @if (ShowRetry)
        {
            <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="OnRetryClick" Class="mt-4">
                <MudIcon Icon="@Icons.Material.Filled.Refresh" Class="mr-2" />
                Reintentar
            </MudButton>
        }
    </div>
}

@code {
    [Parameter] public string? Message { get; set; }
    [Parameter] public string Title { get; set; } = "Ha ocurrido un error";
    [Parameter] public bool ShowRetry { get; set; }
    [Parameter] public EventCallback OnRetryClick { get; set; }
}

<style>
    .error-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        min-height: 200px;
        text-align: center;
        padding: 2rem;
        animation: slideIn 0.3s ease-out;
    }

    @keyframes slideIn {
        from {
            opacity: 0;
            transform: translateY(-20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .mud-icon-root {
        font-size: 4rem;
        height: 4rem;
        width: 4rem;
    }
</style> 